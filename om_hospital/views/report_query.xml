<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <report
            id="partner_csv"
            model="res.partner"
            string="Print to CSV"
            report_type="csv"
            name="report_csv.partner_csv"
            file="report_csv.partner_csv"
            attachment_use="False"
        />

        <record id="view_report_query" model="ir.ui.view">
            <field name="name">Report Query</field>
            <field name="model">report.query</field>
            <field name="type">form</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <group>
                            <field name="name" required="1" />
                            <field name="headers" required="1" />
                        </group>
                        <notebook>
                            <page name="query" string="Query">
                                <field name="query" required="1" />
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="action_report_query" model="ir.actions.act_window">
            <field name="name">Report Query</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">report.query</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" eval="False"/>
        </record>

        <menuitem
        id="report_query_sub_module"
        name=" Report Query"
        parent="base.reporting_menuitem"
        action="action_report_query"
        sequence="15"
        />
    </data>
</odoo>
