<odoo>
    <data>
        <record id="patient_report_csv_wizard" model="ir.ui.view">
            <field name="name">Patient Report</field>
            <field name="model">om_hospital.report.patient</field>
            <field name="arch" type="xml">
                <form>
                    <group>
                        <group>
                            <field name="gender_type"/>
                        </group>
                        <group>
                            <field name="martial_status"/>
                        </group>
                    </group>
                    <footer>
                        <button name="print_csv_report" type="object" string="Export CSV" class="oe_highlight"/>
                        <button string="Cancel" class="oe_link" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_patient_report" model = "ir.actions.act_window">
            <field name="name">Patient Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">om_hospital.report.patient</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
            <field name="view_id" eval="False"/>
        </record>

        <report
            id="patient_report_csv_report"
            model="hospital.patient"
            string="Patient Report"
            report_type="csv"
            name="om_hospital.patient_report_csv_report"
            file="om_hospital.patient_report_csv_report"
        />

        <menuitem id="sub_menu_report" name="Reporting" parent="om_hospital.menu_hospital_root" sequence="100"/>
        <menuitem
            id="menu_patient_report" name="Patient Report" action="action_patient_report"
            parent="sub_menu_report" sequence="10"/>
    
    </data>
</odoo>
